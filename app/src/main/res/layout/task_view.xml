<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/task_width"
    android:layout_height="@dimen/task_height"
    android:layout_margin="@dimen/task_margin"
    android:background="@color/task_background"
    android:elevation="@dimen/task_elevation"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/task_icon"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="24dp"
        android:textColor="@color/task_title"
        android:textSize="@dimen/title_text_size"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="1"/>
</FrameLayout>